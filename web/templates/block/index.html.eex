<h2>Listing blocks</h2>

<%= link "New block", to: block_path(@conn, :new), class: "btn btn-default btn-xs" %>

<table class="table">
  <thead>
    <tr>
      <th>Block</th>
      <th>Number</th>
      <th>Note</th>
      <th>Action</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for block <- @blocks do %>
    <tr>
      <td><%= block.id %></td>
      <td><%= block.data["number"] %></td>
      <td><%= block.data["note"] %></td>
      <td><%= block.data["action"] %></td>
      <td class="text-right">
        <%= link "Delete", to: block_path(@conn, :delete, block.hash), method: :delete, class: "btn btn-danger btn-xs" %>
        <%= link "Edit", to: block_path(@conn, :edit, block.hash), class: "btn btn-default btn-xs" %>
        <%= link "Show", to: block_path(@conn, :show, block.hash), class: "btn btn-default btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
